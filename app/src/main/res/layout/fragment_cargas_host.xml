<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_vertical"
    tools:context="br.com.gomes.moreira.guilherme.tcc.escadaslongitudinais.cargas.CargasFragment">

    <LinearLayout
        android:id="@+id/layout_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_cargas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/da_wae_dark"
            app:tabIconTint="@color/tab_icon_tint"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorAnimationMode="linear"
            app:tabIndicatorHeight="3dp"
            app:tabMode="auto"
            >

        </com.google.android.material.tabs.TabLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_2_cargas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



    </LinearLayout>

</layout>